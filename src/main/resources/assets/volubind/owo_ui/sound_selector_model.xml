<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical">
                    <children>
                        <label>
                            <text translate="true">volubind.screen.sound_selector.label</text>
                            <margins>
                                <bottom>8</bottom>
                            </margins>
                            <sizing>
                                <horizontal method="fixed">220</horizontal>
                            </sizing>
                            <horizontal-text-alignment>center</horizontal-text-alignment>
                        </label>
                        <button id="volubind-button">
                            <text translate="true">volubind.screen.sound_selector.volubind</text>
                            <margins>
                                <bottom>2</bottom>
                            </margins>
                            <sizing>
                                <horizontal method="fixed">160</horizontal>
                                <vertical method="fixed">20</vertical>
                            </sizing>
                        </button>
                        <button id="sound-options-button">
                            <text translate="true">volubind.screen.sound_selector.vanilla</text>
                            <sizing>
                                <horizontal method="fixed">160</horizontal>
                                <vertical method="fixed">20</vertical>
                            </sizing>
                        </button>
                        <button id="done-button">
                            <text translate="true">gui.done</text>
                            <margins>
                                <top>16</top>
                            </margins>
                            <sizing>
                                <horizontal method="fixed">160</horizontal>
                                <vertical method="fixed">20</vertical>
                            </sizing>
                        </button>
                    </children>
                    <horizontal-alignment>center</horizontal-alignment>
                </flow-layout>
            </children>
            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>
        </flow-layout>
    </components>
</owo-ui>
